<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/row_image_view"
        android:layout_margin="@dimen/margin_lo"
        android:layout_width="@dimen/sizeimage"
        android:layout_height="@dimen/sizeimage" />
</LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/txtItemNameAPP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="nameapp"
            android:textSize="@dimen/sizeNameappList"/>
        <TextView
            android:textSize="@dimen/sizeDepoymentList"
            android:layout_weight="1"
            android:textStyle="italic"
            android:id="@+id/txtItemNameDeployment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="deployment" />
        <TextView
            android:textSize="@dimen/sizeDetailList"
            android:layout_weight="1"
            android:text="detail"
            android:id="@+id/txtItemDetailAPP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="unistall"
            android:textColor="@color/colortxtUnistallDetail"
            android:background="@color/colorUnistallDetail"/>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="open"
            android:textColor="@color/colortxtOpenDetail"
            android:background="@color/colorOpenDetail"/>
    </LinearLayout>
</LinearLayout>